<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/Application_Background"
    android:padding="0dp">
    <ImageView
        android:id="@+id/ShoppingItemListView_Image"
        android:contentDescription="@string/Picture"
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:paddingTop="3dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:src="@drawable/ic_photo_camera_black_24dp"
        android:layout_alignParentLeft="true" />
    <LinearLayout
        android:id="@+id/ShoppingItemListView_Text"
        android:orientation="vertical"
        android:paddingLeft="74dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp">
        <TextView
            android:id="@+id/ShoppingItemListView_Heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_Color"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/ShoppingItemListView_SubHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/Text_Color2"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/ShoppingItemListView_Quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FF0000FF"
            android:textSize="20sp"
            android:visibility="gone" />
    </LinearLayout>
    <CheckBox
        android:id="@+id/ShoppingItemListView_Bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#FF0000FF"
        android:text="@string/ShoppingList_Bought"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:buttonTint="#FF0000FF"
        android:paddingRight="5.0dp" 
        android:visibility="gone" 
        android:focusable="false"
        android:focusableInTouchMode="false"    
    />
</RelativeLayout>